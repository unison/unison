#!/usr/bin/env perl
# load-pmpssm -- loads psiblast profiles (PSSMs)into unison
# $Id: load-pmpssm,v 1.1 2003/05/27 22:33:45 rkh Exp $


use strict;
use warnings;
use Digest::MD5;
use Getopt::Long qw(:config gnu_getopt);
use IO::File;
use Unison;
use Unison::Exceptions;
use Error qw(:try);


my %opts =  ( 
			 'origin' => undef,
			);
GetOptions( \%opts,
			'origin|o=s' )
  || die("Sarge, you've got usage problems; see code\n");


if (not defined $opts{origin}) {
  die("$0: missing required --origin option\n");
}


my $fh = new IO::File;
my $u = new Unison;
my $porigin_id = $u->porigin_si_porigin_id($opts{origin});
print(STDERR "# loading into $opts{origin} (porigin_id=$porigin_id)\n");


my $sth;
$sth = $u->prepare("insert into pmpssm(porigin_id,acc,md5) values ($porigin_id,?,?)")
  || die($u->errstr());

while( my $fn = shift )  {
  my ($acc) = $fn =~ m%/([^/]+/[^/]+)\.chk%;
  if (not defined $acc)
	{ warn("# can't parse acc from $fn; skipping\n"); next; }
  $fh->open("<$fn")
	|| die("$fn: $!\n");
  my $md5 = Digest::MD5->new->addfile($fh)->hexdigest;
  try {
	$sth->execute($acc,$md5);
  } catch Unison::Exception::DBIError with {
	warn($_[0]);
  };
  print(STDERR "# loaded $fn (acc=$acc, md5=$md5)\n");
}

print(STDERR "last_updated = ", $u->porigin_last_updated( $porigin_id,1 ) );

$u->disconnect();
