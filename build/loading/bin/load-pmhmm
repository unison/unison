#!/usr/bin/env perl
# $Id: load-pmhmm,v 1.8 2005/03/29 03:27:05 rkh Exp $
# load pfam HMM into unison
# eg$ load-pmhmm /path/to/pfam-14.0/Pfam_fs


use strict;
use warnings;
use Unison;
use Getopt::Long qw(:config gnu_getopt);
use Data::Dumper;
use IO::File;
use IO::Pipe;


my $fn;
($fn = shift)
  || die("$0: I need that Pfam file name, homey\n");

my ($pfam_version,$fl) = $fn =~ m%pfam-([\.\d]+)/Pfam_([lf]s)%;
(defined $fl)
  || die("$0: couldn't parse origin (pfam-<version>/Pfam_([fl]s) from $fn\n");
my $origin = "Pfam_$fl $pfam_version";		# e.g., Pfam_fs 12.0

my $in;
if ($fn =~ m/.gz/) {
  $in = new IO::Pipe;
  $in->reader( 'gzip', '-cd', $fn );
} else {
  $in = new IO::File;
  $in->open($fn,'rb')
	|| die("$fn: $!\n");
}


my $u = new Unison( dbname=>'csb-dev', username=>'unison' );
my $porigin_id = $u->porigin_si_porigin_id($origin);
(defined $porigin_id)
  || die("$0: origin $origin: $@\n");
my $sth = $u->prepare('update porigin set url=?,descr=? where porigin_id=?');
$sth->execute('http://pfam.wustl.edu/cgi-bin/getdesc?acc=%s',
			  "Pfam_$fl version $pfam_version",
			  $porigin_id)
  || die("$0: update porigin: $@\n");
printf(STDERR "# loading models into $origin (porigin_id=$porigin_id)\n");


my @insert_fields = q(porigin_id name acc descr len nseq cksum
					ga_seq ga_dom tc_seq tc_dom nc_seq nc_dom);
my $sth_insert_pmhmm = $u->prepare(sprintf('insert into pmhmm (%s) values (%s)',
										   join(',',@insert_fields),
										   join(',',map {'?'} @insert_fields)
										  )
								  );

#my $sth_update_pmhmm = $u->prepare('update pmhmm set ga_seq=?,ga_dom=?,tc_seq=?,tc_dom=?,nc_seq=?,nc_dom=?
#									where porigin_id=? and acc=?');

$/ = "\n//\n";
$u->begin_work();
while(my $blk = <$in>) {
  chomp($blk);
  my ($name,$acc,$descr,$len,$nseq,$cksum,$ga,$tc,$nc) 
	= map {$blk =~ m/^$_\s+(.+)/m}  qw(NAME ACC DESC LENG NSEQ CKSUM GA TC NC);
  my ($gas,$gad) = split(' ',$ga);
  my ($tcs,$tcd) = split(' ',$tc);
  my ($ncs,$ncd) = split(' ',$nc);
  #my $hmm = $blk . $/;

  #$sth_update_pmhmm->execute($gas,$gad,$tcs,$tcd,$ncs,$ncd,$porigin_id,$acc);

  $sth_insert_pmhmm->execute($porigin_id,$name,$acc,$descr,$len,$nseq,$cksum,
							 $gas,$gad, $tcs,$tcd, $ncs,$ncd);

  print(STDERR "loaded $acc: $name ($descr)\n");
}

printf("done; last updated=%s\n", $u->porigin_last_updated($porigin_id,1));

print("Committing...\n");
$u->commit();
