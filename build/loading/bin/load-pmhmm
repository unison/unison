#!/usr/bin/env perl
# $Id: load-pmhmm,v 1.6 2004/04/02 00:34:05 rkh Exp $
# load pfam HMM into unison
# eg$ load-pmhmm /path/to/pfam-14.0/Pfam_fs


use strict;
use warnings;
use Unison;
use Getopt::Long qw(:config gnu_getopt);
use Data::Dumper;
use IO::File;

my $fn;
($fn = shift)
  || die("$0: I need that Pfam file name, homey\n");

my ($pfam_version,$fl) = $fn =~ m%pfam-([\.\d]+)/Pfam_([lf]s)%;
(defined $fl)
  || die("$0: couldn't parse origin (pfam-<version>/Pfam_([fl]s) from $fn\n");
my $origin = "Pfam_$fl $pfam_version";		# e.g., Pfam_fs 12.0

my $in = new IO::File;
$in->open("<$fn")
  || die("$fn: $!\n");

my $u = new Unison( dbname=>'csb-dev', username=>'loader' );
my $porigin_id = $u->porigin_si_porigin_id($origin);
(defined $porigin_id)
  || die("$0: origin $origin: $@\n");

my $sth = $u->prepare("update porigin set url=?,descr=? where porigin_id=? and url is null");
$sth->execute('http://pfam.wustl.edu/cgi-bin/getdesc?acc=%s',
			  "Pfam_$fl version $pfam_version",
			  $porigin_id)
  || die("$0: update porigin: $@\n");

printf(STDERR "# loading sequences into $origin (porigin_id=$porigin_id)\n");

my $sth_insert_pmhmm = $u->prepare("insert into pmhmm (porigin_id,name,acc,descr,len,nseq,cksum,hmm) ".
						"values ($porigin_id,?,?,?,?,?,?,?)");
my $sth_update_pmhmm = $u->prepare('update pmhmm set hmm=? where porigin_id=? and acc=?');

$/ = "\n//\n";
while(my $blk = <$in>) {
  my ($name,$acc,$descr,$len,$nseq,$cksum) 
	= map {$blk =~ m/^$_\s+(.+)/m}  qw(NAME ACC DESC LENG NSEQ CKSUM);
  chomp($blk);
  my $hmm = $blk . $/;

  ## update hmm to fix a parse error.
  if ( not eval {$sth_update_pmhmm->execute($hmm,$porigin_id,$acc)} ) {
	die("$acc: $@\n");
  }
  print(STDERR "updated $acc: $name ($descr)\n");
  next;

  if ( not eval {$sth_insert_pmhmm->execute($name,$acc,$descr,$len,$nseq,$cksum,$hmm)} ) {
	warn("$acc: $@; skipping\n");
  }
  print(STDERR "loaded $acc: $name ($descr)\n");
}

printf("done; last updated=%s\n", $u->porigin_last_updated($porigin_id,1));
