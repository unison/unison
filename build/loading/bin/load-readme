#!/bin/sh
# load-readme -- shove a readme into the dev database
# $Id$

(
echo 'truncate readme;'
echo "insert into readme values ('"
sed -e "s/'/''/g" README

echo
echo
echo UNISON LICENSE
echo ==============
sed -e "s/'/''/g" LICENSE

echo -n 'Date: '; date -u '+%Y-%m-%d %H:%M:%S %Z'
echo "');"
) | psql -Uunison -dcsb-dev
