#!/usr/bin/env perl

use warnings;
use strict;
use lib ('.', "$ENV{HOME}/unison/perl5");
use Unison;
use IO::File;;


my $fn = "/tmp/sc-$$";
my $fh = new IO::File;
my $u = new Unison;

#foreach my $pseq_id ( $u->seq_not_from_origin(1001) )
foreach my $pseq_id (qw(18 ))
  {
  my $seq = $u->get_seq($pseq_id);
  $fh->open(">$fn")
	|| die("$fn: $!\n");
  $fh->print(">$pseq_id\n",$seq,"\n");
  $fh->close;

  my $tmd = `tmdetect $fn`;
  if (my ($c,$p) = $tmd =~ m/\(S\) (\d+) \d+ \d+ (\S+)/)
	{
	print "$pseq_id: $c $p\n";

	my $sc = `sigcleave -minweight 3.5 -outfile $fn.sc $fn; cat $fn.sc`;
	}


  print $sc;

  exit;
  }

unlink $fn;
