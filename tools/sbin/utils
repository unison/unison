# -*- sh -*-
# $Id: utils,v 1.3 2003/07/31 22:42:23 rkh Exp $
# utils -- misc defaults and utilities for csb-db shell scripts

LOGDIR="/services/logs"
JEMAPPELLE=`basename $0`
LOGFN="$LOGDIR/$JEMAPPELLE"

source /apps/compbio/setup.sh

# logger -- format a log line
# logger <message>
logger () { 
	DATE=`date +"%Y/%m/%d %H:%M:%S"`
	echo "$DATE $JEMAPPELLE[$$]" "$@" >>"$LOGFN"
	if [ -t 0 ]; then
		echo "$DATE $JEMAPPELLE[$$]" "$@" 1>&2
	fi
	}
