#!/bin/bash
PATH=/apps/compbio/i686-linux-2.4/bin:/usr/bin:/bin
case `hostname` in
    sprog*|td-sprog*)
    	PGHOST=;;
    *) 
    	PGHOST=td-sprog;;
esac

export PGHOST
export PGDATABASE=${1:-csb}
export PGPASSWORD=marge

DIR=/home/rkh/unison/backups/$PGDATABASE
mkdir -p "$DIR"
DATE=`date +%Y-%m-%d-%H:%M`;
R="$DIR/$DATE.pgdump"
(time -p pg_dump -Uadmin "$PGDATABASE" | gzip -c) >"$R".gz 2>"$R".err
